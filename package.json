{
  "name": "@ryubb/cra-template-react-ts-boilerplate",
  "version": "0.1.9",
  "files": [
    "template",
    "template.json"
  ],
  "scripts": {
    "tsc": "tsc --noEmit",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./webpack/webpack.config.front.base.js ",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.front.base.js ",
    "test": "cross-env NODE_ENV=test jest",
    "test:coverage": "cross-env NODE_ENV=test jest --collect-coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "lint:eslint": "eslint",
    "lint:eslint:fix": "eslint --fix",
    "lint": "npm run lint:eslint -- . ",
    "prettify": "prettier --write",
    "clean-files": "rm -rf template",
    "cp-files": "mkdir -p template && cp -a ./src ./webpack ./.eslintignore ./.eslintrc.js ./jest.config.js ./README.md ./tsconfig.json ./template && cp -a ./.gitignore ./template/gitignore",
    "prepublishOnly": "yarn cp-files",
    "postpublish": "yarn clean-files"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@reduxjs/toolkit": "^1.4.0",
    "axios": "^0.19.2",
    "camelcase-keys": "^6.2.2",
    "connected-react-router": "^6.8.0",
    "cross-env": "^7.0.2",
    "formik": "^2.1.5",
    "history": "4.7.2",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "query-string": "^6.13.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "snakecase-keys": "^3.2.0",
    "styled-components": "^5.1.1",
    "styled-reset": "^4.2.2",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.2",
    "@types/axios": "^0.14.0",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/history": "^4.7.7",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/react-test-renderer": "^16.9.3",
    "@types/redux-actions": "^2.6.1",
    "@types/redux-mock-store": "^1.0.2",
    "@types/styled-components": "^5.1.2",
    "@types/yup": "^0.29.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-eslint": "^10.1.0",
    "css-loader": "^4.2.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.3.0",
    "husky": "2.7.0",
    "jest": "^26.6.1",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.1.1",
    "react-test-renderer": "^17.0.1",
    "redux-mock-store": "^1.5.4",
    "redux-saga-test-plan": "^4.0.0-rc.3",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn eslint --fix",
      "yarn prettify"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
